{
  "name": "nest-typescript-test",
  "version": "1.0.0",
  "description": "Nest TypeScript test",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0-beta.3",
    "@nestjs/core": "^5.0.0-beta.3",
    "@nestjs/swagger": "^1.2.2",
    "@nestjs/testing": "^5.0.0-beta.3",
    "@nestjs/websockets": "^5.0.0-beta.3",
    "app-module-path": "^2.2.0",
    "bcrypt": "^1.0.3",
    "confidence": "^3.0.2",
    "express-winston": "^2.5.1",
    "gulp": "^3.9.1",
    "gulp-nodemon": "^2.2.1",
    "gulp-typescript": "^4.0.2",
    "handlebars": "latest",
    "jsonwebtoken": "^8.2.1",
    "lodash": "latest",
    "moment": "^2.22.1",
    "mongoose": "^5.0.16",
    "ms": "^2.1.1",
    "nest-router": "^1.0.5",
    "nestjs-typegoose": "^1.0.3",
    "nodemailer": "latest",
    "nodemailer-markdown": "latest",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "request-ip": "^2.0.2",
    "rxjs": "^5.5.10",
    "typegoose": "5.0.0",
    "typescript": "^2.8.3",
    "uuid": "^3.2.1",
    "winston": "^2.4.2",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@types/confidence": "^1.4.30",
    "@types/express": "^4.0.39",
    "@types/express-winston": "^2.4.3",
    "@types/handlebars": "^4.0.37",
    "@types/jest": "^21.1.8",
    "@types/jsonwebtoken": "^7.2.6",
    "@types/lodash": "^4.14.107",
    "@types/mongoose": "^5.0.10",
    "@types/node": "^9.6.6",
    "@types/nodemailer": "^4.6.0",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "^2.0.4",
    "@types/winston": "^2.3.9",
    "jest": "^21.2.1",
    "nodemon": "^1.17.3",
    "prettier": "^1.12.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.3.1",
    "tslint": "5.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
